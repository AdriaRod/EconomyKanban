<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EconomyKanban" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- ____________________________******** Dark Mode *******____________________________ -->

    <!-- _________________________________GENERAL ASSETS_______________________________________ -->

    <!-- Welcome title if dark mode on -->
    <style name="TITLE">
        <item name="android:textColor">@color/pink</item>
        <item name="fontFamily">@font/gabarito_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Welcome paragrapht if dark mode on -->
    <style name="PARAGRAPH">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Accents in paragraph -->
    <style name="ACCENT_PARAGRAPH">
        <item name="android:textColor">@color/pink</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- Primary button if dark mode on -->
    <style name="PRIMARY_BUTTON">
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gabarito_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!-- Secondary button if dark mode on -->
    <style name="SECONDARY_BUTTON">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gabarito_regular</item>
    </style>

    <!-- Welcome, Register & Login Screen Background -->
    <style name="WRL_SCREEN">
        <item name="android:background">#141218</item>
    </style>

    <!-- _____________________STATUS BAR Y NAVIGATION BAR del login y el register _________ -->
    <style name="login_register_theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="1">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">False</item>
        <item name="android:windowLightNavigationBar">False</item>
    </style>

    <!--_____________________ STATUS Y NAVIGATION de TRANSACCTIONS Y CATEGORIES ______________ -->
    <style name="fragments_theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="1">@color/screen_dark</item>
        <item name="android:navigationBarColor">@color/bottom_navigation_background_dark</item>
        <item name="android:windowLightStatusBar">False</item>
        <item name="android:windowLightNavigationBar">False</item>
    </style>

    <!-- _________________________________SHAPES_______________________________________ -->
    <style name="SHAPES">
        <item name="tint">@color/c_shape_dark</item>
    </style>

    <style name="fragment_shapes">
    <item name="tint">@color/black</item>
    </style>


    <!-- _________________________________SPLASH SCREEN_______________________________________ -->

    <!--  Splash screen background if dark mode on  -->
    <style name="SPLASH_SCREEN">
        <item name="android:background">@drawable/splash_background_dark</item>
    </style>

    <!-- _____________________________________WELCOME SCREEN___________________________________ -->

    <!-- ********* WELCOME ********* -->

    <!-- Welcome image if dark mode on -->
    <style name="WELCOME_IMAGE">
        <item name="srcCompat">@drawable/women_welcome_img_dark</item>
    </style>

    <!-- _________________________________ FORMS - LOGIN & REGISTER_______________________________________ -->

    <style name="FORM_FIELDS">
        <item name="android:background">@drawable/edit_text_border_dark</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="GOOGLE_BUTTON">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- _________________________________BOTTOM NAVIGATION_______________________________________ -->
    <style name="BOTTOM_NAVIGATION">
        <item name="backgroundTint">@color/bottom_navigation_background_dark</item>
        <item name="itemRippleColor">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@color/bottom_nav_item_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">28dp</item>
    </style>

    <!-- cosas nuevas -->
    <!-- _________________________________FRAGMENTS_______________________________________ -->
    <style name="fragment_background">
        <item name="android:background">@drawable/fragment_background_dark</item>
    </style>

    <style name="date">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="date_graphics">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- _________________________________CATEGORIES FRAGMENT_______________________________________ -->

    <!-- CARD VIEW  -->
    <style name="categories_card">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- ITEM DEL SELECTOR DE 3 BOTONES -->
    <style name="option_field">
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/blue</item>
        <item name="drawableTint">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="option_field_remove">
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- SPINNER DE TYPES -->
    <style name="spinner">
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <!-- CATEGORIES RADIO BUTTONS -->
    <style name="categories_radio_button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/category_radio_button_background_dark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:button">@drawable/button_category_selector_dark</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <!-- ADD TRANSACTIONS BUTTON -->
    <style name="add_transaction_button">
        <item name="backgroundTint">@color/blue</item>
        <item name="elevation">16dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- _________________________________ ITEM CARD LAYOUT ___________________________ -->
    <style name="item_card_background">
        <item name="backgroundColor">@color/screen_dark</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="title_item_card">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="maxLines">2</item>
        <item name="android:breakStrategy">balanced</item>
    </style>

    <style name="tag_item_card">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/bottom_nav_icon</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="number_currency_item_card">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="line_item_card">
        <item name="android:background">@color/bottom_nav_icon</item>
    </style>

    <!-- ________________________ DIALOG PARA AÑADIR TRANSACTION ________________________ -->
    <style name="dialog_add_transaction_background">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardCornerRadius">24dp</item>
    </style>

    <style name="close_dialog">
        <item name="android:tint">@color/bottom_nav_icon</item>
        <item name="background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="dialog_edit_text">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/bottom_nav_icon</item>
    </style>

    <style name="dialog_radio_buttons">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="backgroundTint">@color/screen_dark</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bottom_nav_icon</item>
        <item name="cornerRadius">10dp</item>£
    </style>

    <!-- GRAPHIC FRAGMENT -->
    <style name="graphic_background">
        <item name="android:background">@drawable/fragment_background_dark</item>
    </style>

    <style name="month_title">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/white</item>
    </style>

    <style name="month_radio_button_unselected_graphic">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:colorControlHighlight">@color/white</item>
    </style>

    <style name="arrows">
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="graphic_card">
        <item name="cardBackgroundColor">#1A1818</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- MANAGE ACCOUNT ACTIVITY -->
    <style name="action_button">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="manage_account_edit_text">
        <item name="android:background">@drawable/edittext_manage_account_background_dark</item>
        <item name="android:padding">10dp</item>
        <item name="paddingStart">20dp</item>
        <item name="android:textColorHint">#B1B1B1</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="action_text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="manage_account_text_view">
        <item name="android:background">@drawable/edittext_manage_account_background_dark</item>
        <item name="android:padding">10dp</item>
        <item name="paddingStart">20dp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">#B1B1B1</item>
        <item name="drawableTint">#B1B1B1</item>
    </style>

    <style name="logout_delete_button">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- FORGOT PASSWORD ACTIVITY -->
    <style name="forgot_text">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="forgot_secondary_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:background">@drawable/button_border_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- CURRENCY -->

    <style name="currency_radio_group">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/radiobutton_currency_selector_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
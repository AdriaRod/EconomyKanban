<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EconomyKanban" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- ____________________________******** Dark Mode *******____________________________ -->

    <!-- _________________________________GENERAL ASSETS_______________________________________ -->

    <!-- Welcome title if dark mode on -->
    <style name="TITLE">
        <item name="android:textColor">@color/pink</item>
    </style>

    <!-- Welcome paragrapht if dark mode on -->
    <style name="PARAGRAPH">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Accents in paragraph -->
    <style name="ACCENT_PARAGRAPH">
        <item name="android:textColor">@color/pink</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- Primary button if dark mode on -->
    <style name="PRIMARY_BUTTON">
        <item name="backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gabarito_bold</item>
    </style>

    <!-- Secondary button if dark mode on -->
    <style name="SECONDARY_BUTTON">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gabarito_regular</item>
    </style>

    <!-- Welcome, Register & Login Screen Background -->
    <style name="WRL_SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <!-- _____________________STATUS BAR Y NAVIGATION BAR del login y el register _________ -->
    <style name="login_register_theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="1">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">False</item>
        <item name="android:windowLightNavigationBar">False</item>
    </style>

    <!-- _________________________________SHAPES_______________________________________ -->
    <style name="SHAPES">
        <item name="tint">@color/c_shape_dark</item>
    </style>


    <!-- _________________________________SPLASH SCREEN_______________________________________ -->

    <!--  Splash screen background if dark mode on  -->
    <style name="SPLASH_SCREEN">
        <item name="android:background">@drawable/splash_background_dark</item>
    </style>

    <!-- _____________________________________WELCOME SCREEN___________________________________ -->

    <!-- ********* WELCOME ********* -->

    <!-- Welcome image if dark mode on -->
    <style name="WELCOME_IMAGE">
        <item name="srcCompat">@drawable/women_welcome_img_dark</item>
    </style>

    <!-- _________________________________LOGIN & REGISTER - FORMS_______________________________________ -->

    <style name="FORM_FIELDS">
        <item name="android:background">@drawable/edit_text_border_dark</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GOOGLE_BUTTON">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
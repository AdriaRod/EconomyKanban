<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CategoriesFragment"
    style="@style/fragment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Fecha -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp">

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current date"
                style="@style/date"
                />
        </LinearLayout>

        <!-- Balance -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal|center"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    style="@style/balance_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textAlignment="center"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/textView11"
                    style="@style/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-20dp"
                    android:text="â‚¬"
                    android:textAlignment="center" />


            </LinearLayout>

            <View
                android:layout_marginTop="-10dp"
                android:layout_width="150dp"
                android:layout_height="3dp"
                android:background="@color/white"
                />

        </LinearLayout>

        <!-- Horizontal scroll: meses -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginHorizontal="80dp">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/january"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Jan"
                         />

                    <Button
                        android:id="@+id/february"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Feb" />

                    <Button
                        android:id="@+id/march"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Mar" />

                    <Button
                        android:id="@+id/april"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Apr" />

                    <Button
                        android:id="@+id/may"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="May" />

                    <Button
                        android:id="@+id/june"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Jun" />

                    <Button
                        android:id="@+id/july"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Jul" />

                    <Button
                        android:id="@+id/augost"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Aug" />

                    <Button
                        android:id="@+id/september"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Sep" />

                    <Button
                        android:id="@+id/october"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Oct" />

                    <Button
                        android:id="@+id/november"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Nov" />

                    <Button
                        android:id="@+id/december"
                        android:background="@drawable/month_button_selector"
                        style="@style/month_buttons"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Dec" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
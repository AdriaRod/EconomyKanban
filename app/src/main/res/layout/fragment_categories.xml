<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CategoriesFragment"
    style="@style/fragment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Fecha -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp">

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current date"
                style="@style/date"
                />
        </LinearLayout>

        <!-- Balance -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal|center"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    style="@style/balance_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textAlignment="center"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/textView11"
                    style="@style/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-20dp"
                    android:text="â‚¬"
                    android:textAlignment="center" />


            </LinearLayout>

            <View
                android:layout_marginTop="-10dp"
                android:layout_width="150dp"
                android:layout_height="3dp"
                android:background="@color/white"
                />

        </LinearLayout>

        <!-- Horizontal scroll: meses -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            >


            <ImageView
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/arrow"
                android:padding="10dp"/>

            <RadioGroup
                android:id="@+id/month_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RadioButton
                    android:id="@+id/previous_month"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Mes0"
                    style="@style/radio_button_unselected"

                    />

                <RadioButton
                    android:id="@+id/current_month"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Mes1"
                    style="@style/radio_button_selected"


                    />

                <RadioButton
                    android:id="@+id/next_month"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Mes2"
                    style="@style/radio_button_unselected"
                    />
            </RadioGroup>

            <ImageView
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:rotationY="180"
                android:src="@drawable/arrow" />

        </LinearLayout>

        <!-- CONTENEDOR CARD VIEW  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <!-- CARD VIEW -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/categories_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="30dp"
                    >

                <!-- LINEAR LAYOUT PARA FILTROS Y AJUSTES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/filtersbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="All"
                        android:drawableRight="@drawable/arrow_down"
                        android:drawablePadding="10dp"/>

                    <!-- Espacio para separar los elementos -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </View>

                    <TextView
                        android:id="@+id/addBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/add"
                        android:drawableLeft="@drawable/plus"
                        style="@style/option_field"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/editBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/edit"
                        android:drawableLeft="@drawable/pencil"
                        style="@style/option_field"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/removeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/delete"
                        android:drawableLeft="@drawable/trash"
                        style="@style/option_field_remove"
                        android:visibility="invisible"
                       />

                    <ImageView
                        android:id="@+id/btn_popUpMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/blue_three_dots"

                        />


                </LinearLayout>

                <!-- LINEAR LAYOUT PARA LAS CATEGORIAS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!-- fin del contenedor del card view -->

    </LinearLayout>
</FrameLayout>
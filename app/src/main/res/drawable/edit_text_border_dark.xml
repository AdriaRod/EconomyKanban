<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/gray" /> <!-- Color de fondo -->
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- Color del borde enfocado -->
            <corners android:radius="10dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="@color/gray" /> <!-- Color de fondo -->
            <corners android:radius="10dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
</selector>
